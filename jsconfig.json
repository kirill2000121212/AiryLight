{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~build/*": [
                "src/build/*"
            ],
            "~fonts/*": [
                "src/fonts/*"
            ],
            "~images/*": [
                "src/images/*"
            ],
            "~js/*": [
                "src/js/*"
            ],
            "~scss/*": [
                "src/scss/*"
            ],
            "~/*": [
                "src/*"
            ]
        }
    }
}